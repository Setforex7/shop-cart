<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
    xmlns:f="sap.ui.layout.form" >
    <f:SimpleForm editable="false"
                  labelSpanXL="3"
                  labelSpanL="3"
                  labelSpanM="3"
                  labelSpanS="12"
                  adjustLabelSpan="false"
                  columnsXL="1"
                  columnsL="1"
                  columnsM="1"
                  binding="{globalModel>/selectedCompany}">
        <f:content>
            <Label text="{i18n>name}" />
            <Input value="{globalModel>name}" placeholder="Name..." liveChange="onCreateCompanyNameChange"
                   required="true" type="Text" width="60%" />
            <Label text="{i18n>description}" />
            <Input value="{globalModel>description}" placeholder="Description..." liveChange="onCreateCompanyDescriptionChange" 
                   type="Text" width="60%" />
            <Label text="{i18n>capital}" required="true" />
            <HBox alignItems="Center" width="60%">
                <Input 
                    value="{globalModel>capital}"
                    placeholder="Capital..."
                    liveChange="onCreateCompanyCapitalChange" 
                    required="true" 
                    type="Number" 
                    width="90%"
                    class=""> <layoutData>
                        <FlexItemData growFactor="1" /> </layoutData>
                </Input>
                
                <Select
                    items="{ path: '/Currencies' }"
                    required="true"
                    width="80%"
                    selectedKey="{globalModel>/selectedCompany/currency_code}"
                    forceSelection="false"
                    change="onCreateCompanyCurrencyChange">

                    <layoutData>
                        <FlexItemData growFactor="1" /> 
                        </layoutData>
                    <items>
                        <core:Item key="{code}" text="{symbol} - {code}" />
                    </items>
                </Select>
            </HBox>

            <Label text="actions" visible="false" />
            <HBox>
                <Button text="{i18n>create}" enabled="{= ${globalModel>/selectedCompany/name} &amp;&amp; 
                                                         ${globalModel>/selectedCompany/capital} ? true : false }" 
                        class="sapUiSmallMarginEnd" type="Success" press="onCreateCompany" />
                <Button text="{i18n>clear}" press="onClearSelectedCompanyData" type="Default"
                        visible="{= ${globalModel>/selectedCompany/name} || 
                                    ${globalModel>/selectedCompany/capital} ||
                                    ${globalModel>/selectedCompany/description} ? true : false }"  /> 
            </HBox>
        </f:content>
    </f:SimpleForm>
</core:FragmentDefinition>