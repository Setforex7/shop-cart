<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
>
    <Dialog title="Shopping Cart" id="Cart">
        <content>
            <table:Table
                id="cartTable"
                rows="{globalModel>/cart}"
                visibleRowCount="5"
                selectionMode="None"
                class="sapUiSmallMargin">
                <table:extension>
                    <OverflowToolbar>
                            <Button text="Add Cart" iconFirst="true" icon="sap-icon://add" press="onAddCartButtonPress" />
                        <ToolbarSeparator />
                            <Label text="Cart's" />
                            <Select autoAdjustWidth="false" columnRatio="3:2" editable="true" enabled="true" forceSelection="false" id="cartsSelect"
                                    icon="sap-icon://cart" maxWidth="100%" items="{globalModel>/carts}" selectedKey="{globalModel>/selectedCart/ID}" change="onCartsSelectChange" resetOnMissingKey="false" width="10%" wrapItemsText="false">
                                <items>
                                    <core:Item key="{globalModel>ID}" text="{globalModel>name}" />
                                </items>
                            </Select>
                        <ToolbarSpacer />
                        <ToolbarSpacer />
                            <Title level="H2" text="Total" titleStyle="Auto" width="" wrapping="false" wrappingType="Normal" />
                            <Text text="{= ${globalModel>/products}.length }" />
                    </OverflowToolbar>
                </table:extension>
                <table:columns>
                    <table:Column width="20%">
                        <Label text="Name" />
                        <table:template>
                            <Text text="{globalModel>name}" />
                        </table:template>
                    </table:Column>
                    <table:Column width="20%">
                        <Label text="Description" />
                        <table:template>
                            <Text text="{globalModel>description}" />
                        </table:template>
                    </table:Column>
                    <table:Column width="20%">
                        <Label text="Price" />
                        <table:template>
                            <Text text="{globalModel>price}" />
                        </table:template>
                    </table:Column>
                    <table:Column width="20%">
                        <Label text="Quantity" />
                        <table:template>
                            <Text text="{globalModel>quantity}" />
                        </table:template>
                    </table:Column>
                    <table:Column width="20%">
                        <Label text="Total" />
                        <table:template>
                            <Text text="{= ${globalModel>quantity} * ${globalModel>price}}" />
                        </table:template>
                    </table:Column>
                </table:columns>
            </table:Table>
        </content>
        <beginButton>
            <Button text="{i18n>close}" press="closeCartDialog" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>