<core:FragmentDefinition 
    xmlns="sap.m" 
    xmlns:l="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog
        id="editProduct"
        title="{i18n>edit_product}"
        contentWidth="500px"
        contentHeight="auto"
        draggable="true"
        resizable="true"
        contentPadding="true">
        
        <content>
            <l:Form editable="true" binding="{globalModel>/selectedProduct}" layout="ResponsiveGridLayout">
                <l:layout>
                    <l:ResponsiveGridLayout
                        labelSpanL="4" labelSpanM="2"
                        emptySpanL="0" emptySpanM="0"
                        columnsL="2" columnsM="1" />
                </l:layout>
                <l:formContainers>
                    <l:FormContainer title="Product Details" expandable="true" expanded="true">
                        <l:formElements>
                            <l:FormElement label="Name">
                                <l:fields>
                                    <Input value="{globalModel>name}" type="Text" placeholder="Insert a name..." required="true" />
                                </l:fields>
                            </l:FormElement>
                            <l:FormElement label="Description">
                                <l:fields>
                                    <Input value="{globalModel>description}" type="Text" placeholder="Insert a description..." />
                                </l:fields>
                            </l:FormElement>
                            <l:FormElement label="Price">
                                <l:fields>
                                    <Input value="{ path: 'globalModel>price',
                                                    type: 'sap.ui.model.type.Float',
                                                    formatOptions: { minFractionDigits: 2,
                                                                     maxFractionDigits: 2 } }" required="true" />
                                </l:fields>
                            </l:FormElement>
                            <l:FormElement label="Stock Min">
                                <l:fields>
                                    <Input value="{globalModel>stock_min}" type="Number" required="true" />
                                </l:fields>
                            </l:FormElement>
                            <l:FormElement label="Stock Atual"> 
                                <l:fields>
                                    <Input value="{globalModel>stock}" type="Number" required="true" />
                                </l:fields>
                            </l:FormElement>
                        </l:formElements>
                    </l:FormContainer>
                </l:formContainers>
            </l:Form>
        </content>
        
        <beginButton>
            <Button text="Create" type="Success" press="onEditProduct" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="closeEditProductDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>