<mvc:View controllerName="cap_try.controller.Reports"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:mdc="sap.ui.mdc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    
    <VBox class="sapUiSmallMargin">

        <mdc:FilterBar
        id="fbReports"
        delegate='{"name": "sap/ui/mdc/odata/v4/FilterBarDelegate"}'
        filterConditions="{$filters>/conditions}"
        p13nMode="Item,Value"
        metaPath="/Orders"/>

        <mdc:Table
        id="tblReports"
        header="Orders"
        type="ResponsiveTable"
        delegate='{"name": "sap/ui/mdc/odata/v4/TableDelegate"}'    
        metaPath="/Orders"
        filter="fbReports"
        items="{ path: '/Orders' }">

        <mdc:columns/>
        </mdc:Table>

    </VBox>
</mvc:View>